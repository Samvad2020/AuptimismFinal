<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <com.eyalbira.loadingdots.LoadingDots
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        app:LoadingDots_auto_play="true"
        app:LoadingDots_dots_color="@color/colorPrimaryDark"
        app:LoadingDots_dots_count="5"
        android:layout_marginTop="5dp"
        app:LoadingDots_dots_size="10dp"
        app:LoadingDots_dots_space="1dp"
        android:id="@+id/dots"
        app:LoadingDots_loop_duration="800"
        app:LoadingDots_loop_start_delay="100"
        app:LoadingDots_jump_duration="200"
        app:LoadingDots_jump_height="4dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:id="@+id/rootLayout"
        android:visibility="gone"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="@drawable/background"
        android:layout_marginTop="20dp"
        android:text="How was the child feeling at that time?"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:layout_height="wrap_content"/>
    <CheckBox
        android:id="@+id/aggressive"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Aggressive"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="10dp" />
    <CheckBox
        android:id="@+id/annoyed"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Annoyed"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="10dp" />
    <CheckBox
        android:id="@+id/grumpy"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Grumpy"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="10dp" />
    <CheckBox
        android:id="@+id/crying"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Crying"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="10dp" />
    <CheckBox
        android:id="@+id/sleepy"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Sleepy"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="10dp" />
    <CheckBox
        android:id="@+id/irritated"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Irritated"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="10dp" />
    <CheckBox
        android:id="@+id/selfharm"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Self Harm"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="10dp" />
    <CheckBox
        android:id="@+id/other"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Other"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="10dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/submitMood"
        android:text="SUBMIT"
        android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>