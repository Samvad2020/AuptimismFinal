<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <FrameLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".ui.dashboard.DashboardFragment"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:src="@drawable/detailtop"
            android:scaleType="fitXY"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:src="@drawable/menuicon"
                    android:layout_gravity="left"
                    android:layout_height="20dp"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_gravity="center"
                        android:src="@drawable/auptimismlogo"
                        android:layout_height="20dp"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="20dp"
                    android:src="@drawable/notificationicon"
                    android:layout_gravity="right"
                    android:layout_height="20dp"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <TextView
        android:layout_width="match_parent"
        android:text="Wash Hands"
        android:textSize="20dp"
        android:id="@+id/txt_detail_nameActivity"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:text="Media"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"/>
    <View android:layout_height="1dp"
        android:background="#C0C0C0"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:id="@+id/dailyLifeMediaRecyclerview"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:text="Information"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"/>
    <View android:layout_height="1dp"
        android:background="#C0C0C0"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"/>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
        <androidx.cardview.widget.CardView android:layout_width="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/personalprof"
            app:cardCornerRadius="15dp"
            app:cardElevation="5dp"
            app:cardMaxElevation="10dp"
            app:cardUseCompatPadding="true"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="300dp"
                    android:text="About the Activity"
                    android:textSize="15dp"
                    android:textColor="#fff"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:paddingStart="10dp"
                    android:background="#204dea"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="match_parent"
                    android:background="#fff"
                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"
                    android:paddingRight="5dp"
                    android:textSize="15dp"
                    android:id="@+id/txt_about_activity"
                    android:layout_height="200dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView android:layout_width="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/personal"
            app:cardCornerRadius="15dp"
            app:cardElevation="5dp"
            app:cardMaxElevation="10dp"
            app:cardUseCompatPadding="true"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="300dp"
                    android:text="Tips and Suggestions"
                    android:textSize="15dp"
                    android:textColor="#fff"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:paddingStart="10dp"
                    android:background="#204dea"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="match_parent"
                    android:background="#fff"
                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"
                    android:paddingRight="5dp"
                    android:textSize="15dp"
                    android:id="@+id/txt_tips_suggestions"
                    android:layout_height="200dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView android:layout_width="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/persona"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp"
                app:cardMaxElevation="10dp"
                app:cardUseCompatPadding="true"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="300dp"
                        android:text="Steps to follow"
                        android:textSize="15dp"
                        android:textColor="#fff"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:paddingStart="10dp"
                        android:background="#204dea"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"/>
                    <androidx.core.widget.NestedScrollView
                        android:layout_width="match_parent"
                        android:focusable="true"
                        android:layout_height="200dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="#fff"
                        android:paddingLeft="5dp"
                        android:paddingTop="10dp"
                        android:paddingRight="5dp"
                        android:textSize="15dp"
                        android:orientation="vertical"
                        android:id="@+id/layout_steps"
                        android:layout_height="200dp"/>
                    </androidx.core.widget.NestedScrollView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </HorizontalScrollView>
    <TextView
        android:layout_width="match_parent"
        android:text="Comments"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"/>
    <View android:layout_height="1dp"
        android:background="#C0C0C0"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"/>
    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:id="@+id/layout_comments"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <EditText
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/edit_comments"
        android:hint="Enter Comments"
        android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="20dp"
            android:src="@drawable/send_icon"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/img_send"
            android:layout_height="20dp"/>
    </LinearLayout>

</LinearLayout>
</ScrollView>