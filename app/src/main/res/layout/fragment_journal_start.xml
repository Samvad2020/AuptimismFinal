<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".ui.dashboard.DashboardFragment"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:src="@drawable/detailtop"
            android:scaleType="fitXY"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:src="@drawable/menuicon"
                    android:layout_gravity="left"
                    android:layout_height="20dp"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_gravity="center"
                        android:src="@drawable/auptimismlogo"
                        android:layout_height="20dp"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="20dp"
                    android:src="@drawable/notificationicon"
                    android:layout_gravity="right"
                    android:layout_height="20dp"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <ImageView
        android:layout_width="120dp"
        android:src="@drawable/journaltop"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:layout_height="120dp"/>
    <TextView
        android:layout_width="match_parent"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:text="Tell me something more about your child today"
        android:gravity="center"
        android:textColor="#204dea"
        android:id="@+id/txt_intro_statement"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView android:layout_width="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_start_journaling"
        app:cardCornerRadius="15dp"
        android:background="#204dea"
        app:cardElevation="5dp"
        app:cardMaxElevation="10dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <Button
            android:layout_width="wrap_content"
            android:background="#204dea"
            android:text="Start Journaling"
            android:paddingBottom="15dp"
            android:textSize="15dp"
            android:id="@+id/btn_start_journal"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:paddingLeft="15dp"
            android:textColor="#fff"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:text="View All Entries"
        android:textColor="#204dea"
        android:textSize="15dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"/>

</LinearLayout>