<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:background="#fff"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <com.eyalbira.loadingdots.LoadingDots
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        app:LoadingDots_auto_play="true"
        app:LoadingDots_dots_color="@color/colorPrimaryDark"
        app:LoadingDots_dots_count="5"
        android:layout_marginTop="5dp"
        app:LoadingDots_dots_size="10dp"
        app:LoadingDots_dots_space="1dp"
        android:id="@+id/dots"
        app:LoadingDots_loop_duration="800"
        app:LoadingDots_loop_start_delay="100"
        app:LoadingDots_jump_duration="200"
        app:LoadingDots_jump_height="4dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:id="@+id/rootLayout"
        android:visibility="gone"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profileImage"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/profile"
            app:civ_border_width="2dp"
            android:layout_gravity="center"
            app:civ_border_color="#fff"/>
<TextView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:text="Thank you for updating me ! \nSee ya ! \nHave a great day"
    android:layout_width="wrap_content"
    android:textColor="#fff"
    android:textSize="15dp"
    android:textStyle="bold"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="5dp"
    android:layout_height="wrap_content"/>
    </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:text="See Ya! Bye Bye"
            android:id="@+id/getsummary"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>